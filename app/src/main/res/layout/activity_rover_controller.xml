<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:layout_weight="1">

    <hujra.baari.aljazari.joystick.SingleJoystickView
        android:id="@+id/singlejoystickView"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_weight="0.99" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/button_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:text="@string/btnA_text"
            android:textSize="24dp" />

        <Button
            android:id="@+id/button_B"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/btnB_text"
            android:textSize="24dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_dataL"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:gravity="left"
            android:text="@string/dataL_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/button_C"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/btnC_text"
            android:textSize="24dp" />

        <Button
            android:id="@+id/button_D"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/btnD_text"
            android:textSize="24dp" />

    </LinearLayout>

    <TextView android:id="@+id/txt_status"
        android:text="@string/status_text"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>